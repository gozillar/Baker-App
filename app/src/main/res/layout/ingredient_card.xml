<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ingredientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#fa5b75"
            tools:text="Ingredient Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:layout_below="@+id/ingredientName"
            android:id="@+id/ingredientQuantity"
            android:textColor="#ffd464"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            tools:text="Quantity: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ingredientMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredientName"
            android:layout_toRightOf="@+id/ingredientQuantity"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            tools:text="Measure: "
            android:textSize="16sp"
            android:textColor="#ffd464" />

    </RelativeLayout>

</android.support.v7.widget.CardView>